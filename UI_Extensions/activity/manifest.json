{
    "name" : "Chrome-Extension-1",
    "version" : "1.0",
    "description" : "Build a social media blocker extension",
    "manifest_version" : 2,
    "browser_action" : {
         "default_popup" : "popup.html"
    },
    "background" : {
         "scripts" : [
              "background.js"
         ],
         "persistent" : true
    },
    "permissions" : [
        "tabs"
    ]
}